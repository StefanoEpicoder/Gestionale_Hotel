
@model Gestionale_Albergo.Models.Dipendenti

@{
    ViewBag.Title = "Login";
}

<!--<h2>Login</h2>-->


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <div class="w-100 h-50 d-flex justify-content-center align-content-center ">
        <img ID="hotel" src="~/Content/Assets/hotel1.jpg" class="rounded-circle" style="width: 800px" />
    </div>
    <br />
    <h1 class="d-flex justify-content-center align-content-center" style="color: navajowhite; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);">Benvenuti nel vostro Hotel dei sogni...</h1>
    <div class="d-flex flex-column justify-content-center align-content-center w-50 mx-auto rounded mt-5" style="background-color: navajowhite; box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);">

        <div class="d-flex flex-column justify-content-center align-items-center">
            <h2>Log In</h2>

            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label" })
            @Html.ValidationSummary(true, "Uno o più campi input errati:", new { @class = "text-warning" })

            <div class="form-group">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="d-flex flex-column justify-content-center align-items-center">

            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
            <div class="form-group">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
            <br />
        </div>
        <div class="d-flex flex-column justify-content-center align-items-center">

            <input type="submit" value="Log In" class="btn btn-primary border border-light" />

        </div>
        <br>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
